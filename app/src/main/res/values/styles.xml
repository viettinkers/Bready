<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BreadStartButton">
        <item name="android:layout_marginLeft">@dimen/step_border_x_padding</item>
        <item name="android:layout_marginRight">@dimen/step_border_x_padding</item>
    </style>

    <style name="StepTimeStamp">
        <item name="android:paddingTop">@dimen/step_border_y_padding</item>
        <item name="android:paddingBottom">@dimen/step_border_y_padding</item>
        <item name="android:paddingLeft">@dimen/step_border_x_padding</item>
        <item name="android:paddingRight">@dimen/step_border_x_padding</item>
        <item name="android:textColor">#2980b9</item>
        <item name="android:layout_width">96dip</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="StepName">
        <item name="android:paddingTop">@dimen/step_border_y_padding</item>
        <item name="android:paddingBottom">@dimen/step_border_y_padding</item>
        <item name="android:paddingLeft">@dimen/step_border_x_padding</item>
        <item name="android:paddingRight">@dimen/step_border_x_padding</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="StepTimeLeft">
        <item name="android:paddingTop">@dimen/step_border_y_padding</item>
        <item name="android:paddingBottom">@dimen/step_border_y_padding</item>
        <item name="android:paddingLeft">@dimen/step_border_x_padding</item>
        <item name="android:paddingRight">@dimen/step_border_x_padding</item>
    </style>
</resources>
